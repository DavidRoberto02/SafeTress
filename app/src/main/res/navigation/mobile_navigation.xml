    <fragment
        android:id="@+id/action_detail"
        android:name="app.safetress.application.recommendsModule.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" />

    <fragment
        android:id="@+id/action_add"
        android:name="app.safetress.application.addModule.view.AddFragment"
        android:label="@string/title_profile"
