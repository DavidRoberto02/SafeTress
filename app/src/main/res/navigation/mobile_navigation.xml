    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/action_home">

    <fragment
        android:id="@+id/action_home"
        android:name="app.safetress.application.homeModule.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/action_recommends"
        android:name="app.safetress.application.recommendsModule.RecommendationFragment"
        android:label="@string/title_Recomends"
